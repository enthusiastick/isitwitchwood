<div class="small-10 small-centered columns">
  <% if user_signed_in? %>
    <%= simple_form_for @event do |f| %>
      <%= f.input :name %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.button :submit %>
    <% end %>
  <% else %>
    <p>Acess denied.</p>
  <% end %>
</div>
